

<!--@Model ComicBookGallery.Models.comicBook -->

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText; ;

}

<!--use viewbag to be able to grab data from the controller-->
<h1>@Model.SeriesTitle</h1>
<h2>Issue #@Model.IssueNumber</h2>

<h5>Description:</h5>
<div>@Html.Raw(Model.DescriptionHtml)</div>

<!--conditional in case no artist info is available-->
@if (Model.Artists.Length > 0)
{
    <h5>Artists:</h5>
    <div>
        <ul>
            <!-- using artist objects -->
            @foreach (var artist in Model.Artists)
            {
                <li>@artist.Role: @artist.Name</li>
            }
        </ul>
    </div>
}

